<% if @missing_url %>
  <div class='warning'>
    Please enter a URL.
  </div>
<% end %>
<% if @short_description %>
  <div class='warning'>
    Please enter a longer description.
  </div>
<% end %>
<% if @invalid_url %>
  <div class='warning'>
    Please enter a valid URL.
  </div>
<% end %>
<% if @repeat %>
  <div class='warning'>
    You already submitted an article with that URL.
  </div>
<% end %>
<div>
<h1>Fill in article details below:</h1>
</div>
<form action="/articles/new" method = "post">
  <div class="row">
    <div class="medium-4 columns">
      <label>Title
        <input type="text" value="<%= @title %>" id="title" name="title" placeholder="Title">
      </label>
    </div>
    <div class="medium-4 columns">
      <label>URL
        <input type="text" value="<%= @url %>" id="url" name="url" placeholder="URL">
      </label>
    </div>
    <div class="medium-4 columns">
      <label>Description
        <input type="text" value="<%= @description %>" id="description" name="description" placeholder="Description">
      </label>
    </div>
    <div class="small-3 columns end">
    <button type="submit" class="button">Submit Article</button>
    </div>
  </div>
</form>
